{
  "name": "Video Capture Attempt #1",
  "version": "0.1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content_script.js"],
    "run_at": "document_end"
  }],
  "permissions": [
    "desktopCapture",
    "<all_urls>",
    "downloads",
    "activeTab"
  ]
}
